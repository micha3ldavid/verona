
header.xheader

    h1.xheader-title
        a(href="/")
            img.xheader-logo(src="/dist/img/logo.svg", alt="JULIANO")

    button.xheader-mobile.btn-link
        span.fa.fa-navicon.fa-2x(role="presentation")
        span.sr-only
            | Toggle Main Menu

    ul.xheader-nav
        each page in navigations.main
            li
                a(href=page.path) #{page.label}

    ul.xheader-social
        each social in navigations.social
            li
                a(href=social.path, target="_blank")
                    span(role="presentation", class=social.classname)
                    span.sr-only #{social.label}

//-

    header.navbar.navbar-default
        div.container-fluid
            div.navbar-header
                a.navbar-brand(href="/")
                    img(src="dist/img/logo.svg")
            div.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    each page in navigations.main
                        li
                            a(href=page.path) #{page.label}
                ul.nav-social.list-inline
                    each social in navigations.social
                        li
                            a(href=social.path, target="_blank")
                                span(role="presentation", class=social.classname)
                                span.sr-only #{social.label}
