doctype html
html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", type="text/css", href="/dist/css/lib.css")
        link(rel="stylesheet", type="text/css", href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300")
        title
            | JULIANO Streetwear
    body
        include ./shared/header
        script.

            window.addEventListener('load', function () {

                var btn = document.getElementById('btn-mobilenav'),
                    menu = document.getElementById('menu-mobilenav'),
                    hidden;

                btn.addEventListener('click', function (e) {

                    e.preventDefault();

                    hidden = menu.getAttribute('aria-hidden');

                    if (hidden === 'true') {
                        menu.setAttribute('aria-hidden', 'false');
                        return;
                    }
                    menu.setAttribute('aria-hidden', 'true');
                });
            });
